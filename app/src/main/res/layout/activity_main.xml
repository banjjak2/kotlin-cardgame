<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="60dp"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:autofillHints="no"
        android:textSize="20sp"
        android:background="@drawable/edittext_corner_round"
        android:hint="닉네임"
        android:inputType="text"
        android:maxLength="5"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_weight="3.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.6"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_character1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_character1_normal_24"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_character2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_character2_normal_24"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_character3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_character3_normal_24"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_character4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_character4_normal_24"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/iv_select_character"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_character2_normal_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_next"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="다음" />
    </LinearLayout>
</LinearLayout>